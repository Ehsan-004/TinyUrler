@model TinyUrler_DotNetVersion.ViewModels.RegisterViewModel

<div class="container">
    <div></div>
    <h1 class="container_title">tinyUrler - Register</h1>
    <form id="urlForm" method="post" asp-controller="Account" asp-action="Register">
        <label asp-for="Username" class="label">Username:</label>
        <input asp-for="Username" required>
        
        <label asp-for="EmailAddress" >Email Address:</label>
        <input asp-for="EmailAddress" required>

        <label asp-for="Password" >Password:</label>
        <input asp-for="Password" required>

        <label asp-for="PasswordConfirm">Password Confirm</label>
        <input asp-for="PasswordConfirm" required>
    
        <input id="btn_submit" type="submit" value="login">
    </form>

    @if (TempData["Error"] != null)
    {
        <h2 id="errorText">
            @TempData["Error"]
        </h2>
    }
    <div></div>    
</div>
